doctype html
html(ng-app='jsonmon')
  head
    meta(charset='utf-8')
    title(ng-bind='title')
    link(rel='stylesheet', type='text/css', href='main.css')
    script(type='text/javascript' src='angular.min.js')
    script(type='text/javascript' src='app.js')
  body(ng-controller='reload')
    table
      tr
        th Check
        th Status
      tr(ng-repeat='check in json')
        td
          a(ng-if='check.name !== undefined && check.web !== undefined' href='{{check.web}}' title='{{check.web}}')
            | {{check.name}}
          a(ng-if='check.name === undefined && check.web !== undefined' href='{{check.web}}' title='{{check.web}}')
            | {{check.web}}
          div(ng-if='check.name !== undefined && check.shell !== undefined' title='{{check.shell}}')
            | {{check.name}}
          div(ng-if='check.name === undefined && check.shell !== undefined' title='{{check.shell}}')
            | {{check.shell}}
        td
          div(ng-switch on='check.failed')
            .ok(ng-switch-when='false' title="{{check.since | date: 'medium'}}") ok
            .fail(ng-switch-when='true' title="{{check.since | date: 'medium'}}") fail
